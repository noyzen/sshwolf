{
  "name": "ssh-wolf",
  "productName": "SSH Wolf",
  "version": "1.0.0",
  "description": "Modern SSH and SFTP Client",
  "author": "SSH Wolf Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k --success first \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && tsc electron/main.ts electron/preload.ts --outDir electron --esModuleInterop --module commonjs --target es6 && electron .",
    "build": "tsc && vite build && tsc electron/main.ts electron/preload.ts --outDir electron --esModuleInterop --module commonjs --target es6 && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.sshwolf.app",
    "productName": "SSH Wolf",
    "asar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*.js"
    ],
    "win": {
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "target": [
        "zip"
      ],
      "icon": "resources/icon.ico"
    }
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2": "^1.15.0",
    "tailwind-merge": "^2.2.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/ssh2": "^1.11.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "wait-on": "^7.2.0"
  }
}